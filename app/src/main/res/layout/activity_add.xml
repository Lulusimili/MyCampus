<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.administrator.mycampus.activity.AddActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:background="#2298f8">
        <Button
            android:id="@+id/back"
            android:layout_width="40dp"
            android:layout_height="wrap_content"
            android:background="@drawable/back"/>
        <TextView
            android:id="@+id/title_text"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_centerInParent="true"
            android:layout_margin="10dp"
            tools:text="Add Lost"
            android:textSize="20sp"/>
        <Button
            android:id="@+id/commit"
            android:layout_width="40dp"
            android:layout_height="wrap_content"
            android:background="@drawable/commit"
            android:layout_alignParentRight="true"
            />

    </RelativeLayout>

    <LinearLayout
        android:id="@+id/add_photo_layout"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/photo"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_margin="10dp" />

            <Button
                android:id="@+id/add_photo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="40dp"
                android:background="@mipmap/mine_btn_plus" />
        </LinearLayout>
    </LinearLayout>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="详细："
        android:layout_marginLeft="10dp"
        android:textColor="#000"/>

    <EditText
        android:id="@+id/edt_content"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="@drawable/input"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="20dp"
        android:maxLines="5"
        android:hint="请输入描述..."/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#000"
        android:text="联系方式"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="5dp"/>
    <EditText
        android:id="@+id/edt_contact_way"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@drawable/input"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:maxLines="5"
        android:layout_marginTop="20dp"
        android:hint="请输入联系方式..."/>
    <LinearLayout
        android:id="@+id/reward_layout"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp">
            <ImageButton
                android:id="@+id/reward_button"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:background="@drawable/reward"
                android:layout_centerInParent="true"
                android:layout_centerVertical="true"
                />
                <Button
                    android:id="@+id/change_button"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:background="@drawable/change_button"
                    android:layout_centerInParent="true"
                    android:layout_centerVertical="true"/>


        </RelativeLayout>
    </LinearLayout>
</LinearLayout>
